                        </svg>
                    </span>
                    by
                    <a href="https://github.com/maif712" target="_blank">MAIF</a>
                </p>
            </div>
        </footer>
        <!-- End -->
    </div>

    <!-- Change the first . with ~ in Asp.net in order to get the currect path -->
    @await RenderSectionAsync("Scripts", required: false)
    <script src="./js/app.js"></script>
</body>

</html>
