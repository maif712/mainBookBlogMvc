

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Change the first . with ~ in Asp.net in order to get the currect path -->
    <link rel="stylesheet" href="~/css/header.css">
    @await RenderSectionAsync("Styles", required: false)
    <!-- Add style.css file into the css folder which is located in Asp.net wwwroot folder and add ~/css for the currect path -->
    <link rel="stylesheet" href="~/css/style.css">
    <title>Book store</title>
</head>

<body>
    <div id="root-layout">
        <!-- Header and navigation -->
        <header>
            <div class="container flex justify-between items-center">
                <!-- Logo -->
                <div>
                    <a href="#" class="logo">
                        <img src="~/assets/images/icons/menu-book-icon.svg" alt="logo icon" class="book-icon">
                    </a>
                </div>
                <!-- End -->
                <!-- Search form/Input -->
                <div class="md-w-40">
                    <form method="get" asp-controller="Book" asp-action="Search" class="header__serach-form">
                        <div class="form-group">
                            <input name="bookTitle" type="search" placeholder="book title...">
                            <button type="submit" class="search-icon-btn">
                                <img src="~/assets/images/icons/search-icon.svg" alt="search icon">
                            </button>
                        </div>
                    </form>
                </div>
                <!-- End -->
                <!-- Primary navigation menu -->
                <div>
                    <nav class="header__primay-nav" aria-label="Primary navigation">
                        <ul>
                            <!-- Remove the active class in production mode -->
                            <li><a class="header__nav-link" asp-controller="Home" asp-action="Index">home</a></li>
                            <li><a class="header__nav-link" href="#">about us</a></li>
                            <li><a class="header__nav-link" href="#">contact us</a></li>
                            <li><a class="header__nav-link" asp-controller="Dashboard" asp-action="Index">dashboard</a></li>
                        </ul>
                    </nav>
                </div>
                <!-- End -->
            </div>
        </header>
        <!-- End -->
        @RenderBody()
        <!-- Footer copy right rule -->
        <footer>
            <div class="container">
                <p class="footer-para">
                    this template is made with <span class="heart-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px"
                             fill="red">
